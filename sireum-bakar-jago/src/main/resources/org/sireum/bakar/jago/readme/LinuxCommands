 clean up tools (by Jason)
 
 (1) squeezeSpark (make it executable: chmod 700 squeeze)
 #!/bin/sh
#SQUEEZE recursively removes unnecessary backup files

squeeze

echo Removing ada artifacts
find  "$PWD" \( -name '*.lst' -o -name '*.rep' -o -name '*.sli' -o -name '*.vcg' -o -name '*.out' -o -name '*.adt' -o -name '*.ali' \) -exec rm -v {} \;
 
 (2) squeeze
 #!/bin/sh
#SQUEEZE recursively removes unnecessary backup files

echo squeezing $PWD

find  "$PWD" \( -name '*~' -o -name '*.*~' -o -name 'WS_FTP.LOG' -o -name '.*~' -o -name '#*.*#' -o -name '#.*#' -o -name '#*#' -o -name '*.$$$' -o -name '.saves*' -o -name '.pine-debug*' -o -name '*.bak' -o -name '*.aux' -o -name '*.dvi' -o -name '.DS_Store' \) -exec rm -v {} \;

 