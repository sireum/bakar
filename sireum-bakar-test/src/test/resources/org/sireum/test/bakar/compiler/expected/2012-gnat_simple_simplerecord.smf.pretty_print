package SimpleRecord;


typealias Integer SmallInt;

typealias _ARRAY_ Vector;

record Rec {

  SmallInt A;

  Vector B;
}

record NestedRec {

  Rec X;
}

typealias  standard::integer;

procedure Boolean Dummy {

  #l1.
    return true;
}

procedure Add (
        SmallInt I,
        Rec R) {

  #l2.
    R.A := R.A + I;

  #l3.
    return;
}

procedure NAdd (
        SmallInt I,
        NestedRec NR) {

  #l4.
    NR.X.A := NR.X.A + I;

  #l5.
    return;
}

procedure AAdd (
        SmallInt I,
        Rec R) {

  #l6.
    R.B[I] := I + 1ii;

  #l7.
    return;
}